<h1> Edit User </h1>
<%= form_for (@user) do |u| %>
<%= u.label :name %>
<%= u.text_field :name %></br>
<%= u.label :email %>
<%= u.email_field :email %></br>
<%= u.label :username %>
<%= u.text_field :username %></br>
<%= u.label :password %>
<%= u.password_field :password %>
<%= u.submit %>
<% end %>
