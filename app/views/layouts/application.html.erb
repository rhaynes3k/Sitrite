<!DOCTYPE html>
<html>
  <head>
    <title>SitRite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if logged_in? %>
        <h3>You are Logged In, <%= current_user.username %></h3>
    <%end%>
    <%= link_to('Welcome', login_path) %>
    <%= link_to('Users', users_path) %>
    <%= link_to('Sitters', sitters_path) %>
    <%= link_to('Guardians', guardians_path) %>
    <%= yield %>
    </br>
    <%= button_to("Log In With Google", '/auth/google_oauth2') %>
    <%= link_to('logout', logout_path) %>
    
  </body>
</html>
