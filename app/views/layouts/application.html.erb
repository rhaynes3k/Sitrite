<!DOCTYPE html>
<html>
  <head>
    <title>SitRite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= link_to('Users', users_path) %>
    <%= link_to('Sitters', sitters_path) %>
    <%= link_to('Guardians', guardians_path) %>
    <% if logged_in? %>
        <h3>You are Logged In, <%= current_user.username %></h3>
    <%end%>
    <%= yield %>

    </br>
    <%= button_to('Sign Up', users_sign_up_path) %>
    </br>
    <%= button_to("Log In With Google", '/auth/google_oauth2') %>
    <%= button_to('Logout', logout_path, :method => :get) %>

  </body>
</html>
