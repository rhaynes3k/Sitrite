<!DOCTYPE html>
<html>
  <head>
    <title>SitRite</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <center><h1> SitRite </h1>
    <h3> Sitter Software </h3></center>
    <% if logged_in? %>
        <h5 style="text-align: right;">You are logged in as: <%= current_user.name %></h5>
    <%end%>
    <hr>
    <%= link_to('Users', users_path) %>
    <%= link_to('Sitters', sitters_path) %>
    <%= link_to('Guardians', guardians_path) %>
    <%= link_to('Jobs', jobs_path) %>
    <%= yield %>

    </br>
    <% if logged_in? %>
      <%= button_to('Logout', logout_path, :method => :get) %>
      <%= link_to 'Back', :back %>
    <% end %>
  </body>
</html>
